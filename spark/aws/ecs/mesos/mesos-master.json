{
    "containerDefinitions": [
    {
        "name": "mesos_master",
        "image": "redjack/mesos-master",
        "portMappings": [
            {
                "hostPort": 5050,
                "containerPort": 5050,
                "protocol": "tcp"
            }
        ],
        "environment" : [
            { "name" : "MESOS_LOG_DIR", "value" : "/var/log" },
            { "name" : "MESOS_WORK_DIR", "value" : "/var/lib/mesos" }
        ],
        "memory": 256,
        "essential": true
    }
    ],
    "family": "mesos"
}
