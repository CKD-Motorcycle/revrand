{
    "volumes":[
        { "name": "dockersock", "host": { "sourcePath": "/var/run/docker.sock"} },
        { "name": "docker", "host": { "sourcePath": "/usr/bin/docker"} },
        { "name": "sys", "host": { "sourcePath": "/sys"} }
    ],
    "containerDefinitions": [
    {
        "name": "mesos_slave",
        "image": "redjack/mesos-slave",
        "portMappings": [
            {
                "hostPort": 5051,
                "containerPort": 5051,
                "protocol": "tcp"
            }
        ],
        "environment" : [
            { "name" : "MESOS_LOG_DIR", "value" : "/var/log" },
            { "name" : "MESOS_EXECUTER_REGISTRATION_TIMEOUT", "value" : "5mins" },
            { "name" : "MESOS_ISOLATOR", "value" : "cgroups/cpu,cgroups/mem" },
            { "name" : "MESOS_CONTAINERIZERS", "value" : "docker,mesos" },
            { "name" : "MESOS_PORT", "value" : "5051" }
        ],
        "mountPoints": [
            { "sourceVolume": "dockersock", "containerPath": "/var/run/docker.sock", "readOnly": false },
            { "sourceVolume": "docker", "containerPath": "/usr/bin/docker", "readOnly": false},
            { "sourceVolume": "sys", "containerPath": "/sys", "readOnly": true}
        ],
        "memory": 7000,
        "essential": true
    }
    ],
    "family": "mesos_slave"
}
